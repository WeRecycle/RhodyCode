<div id="container">


  <div id="sideContainer">
    <div class="row">
        <h4 class="text-center">Filters</h4>
        <% Tag.all.each do |tag| %>
          <div class="checkbox">
              <label><input type="checkbox" value=""><%= tag.name %></label>
          </div>
        <% end %>
    </div>
  </div>




  <div id="sideContainerLeft">
    <center><h1>Projects</h1></center>
    <%= link_to "Create Project", new_project_path, class: 'btn btn-primary pull-right' %>
    <p>
      <div class="dashboard-container">
        <table class="table">
          <thead>
            <tr>
              <th>Project Name</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
            <tr>
              <td>
                <h3><%= project.title %></h3>
                <%= image_tag "frogger.png" %>
              </td>

              <td>
                <%= project.description %>
                <br><br>
                <p align="right">Last Updated : <i> October 24, 2016</i></p>

                <hr>
                <% project.tags.each do |tag| %>
                  <a href="<%= tag_path(tag) %>" class="btn btn-primary"><%= tag.name %></a>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
